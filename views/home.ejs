                <li id="li_edit_nick">
                    <a>修改昵称</a>
                </li>
                <li id="li_edit_new">
                    <a>新建房间</a>
                </li>
                <li class="divider">
                </li>
                <li>
                    <a href="#">其它</a>
                </li>
            </ul>
        </div>
        <div class="sendField">
            <input type="button" id="match-button" value="开始匹配" class="btn submit">
            <input id="send-massage" type="text" class="send_message" placeholder="chat with xbao">
            <input type="submit" id="send-button" value="发送" class="btn submit">
        </div>
    </div>
