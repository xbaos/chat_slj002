<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="stylesheets/bootstrap/bootstrap.min.css">
    <link rel='stylesheet' href='stylesheets/style.css' />
    <link href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">

    <!-- 可选的Bootstrap主题文件（一般不使用） -->
    <script src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap-theme.min.css"></script>

    <!-- jQuery文件。务必在bootstrap.min.js 之前引入 -->
    <script src="http://cdn.static.runoob.com/libs/jquery/2.1.1/jquery.min.js"></script>

    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>
  <nav id="top">
    <div id="top_line"></div>
    <div id="nav">
      <ul class="nav03 nav_dyna">
        <li><a href="#" class="select">主页</a></li>
        <li><a href="/login">匿名热楼</a></li>
        <li><a href="#">匿名周边</a></li>
        <li><a href="#">匿名视界</a></li>
        <li><a href="#">关于小宝</a></li>
      </ul>
    </div>
  </nav>
  <div id="content">
    <div id="chat">
      <!--在小组成员身份下获得楼主post来信件信息时，展示的画卷打开动画效果-->
      <div class="pic-box" id="mail">
        <div class="pic-box01"></div>
        <div class="pic-box02" id="main_bg">
          <div>
            <input type="button" value="淡入" id="btn_fadein" class="btn_fade">
            <input type="button" value="淡出" id="btn_fadeout" class="btn_fade">
            <input type="button" value="开始编辑" id="btn_parter_edit" class="btn_fade">
            <input type="button" value="提交" id="btn_parter_submit" class="btn_fade">
            <input type="button" value="回复楼主" id="btn_parter_reply" class="btn_fade">
          </div>
            <textarea id="ta_message">
            </textarea>
        </div>
        <div class="pic-box03"></div>
      </div>
      <!--在楼主身份下点击了选择回复小组按钮后，展示出的3d房间盒子9个-->
      <div id="show_box_3d">
        <div id="box_row1">
          <div class="box box1" id="box1"></div>
          <div class="box box2" id="box2"></div>
          <div class="box box3" id="box3"></div>
        </div>
        <div id="box_row2">
          <div class="box box4" id="box4"></div>
          <div class="box box5" id="box5"></div>
          <div class="box box6" id="box6"></div>
        </div>
        <div id="box_row3">
          <div class="box box7" id="box7"></div>
          <div class="box box8" id="box8"></div>
          <div class="box box9" id="box9"></div>
        </div>
      </div>
      <div id="room" class="nav02 nav_dyna">
        <a href="#"><span id="room_name" data-hover="明故宫">浪矢杂货店</span></a>
        <span id="user_sex">
          <% if(user_role!='tourist'){ %>
          <%= user.sex%>
          <% } %>
        </span>当前在线人数-------男生：
        <span id="boy_count">0</span>人----女生：
        <span id="girl_count">0</span>人
        <div id="nick_name">
          <% if(user_role!='tourist'){ %>
          <%= user.nickname%>
          <% } %>
        </div>
      </div>
      <div id="messages">
        <div>
          <textarea id="poster_ta">
          </textarea>
        </div>
      </div>
      <div id="room-list" class="nav01 nav_dyna">
        <!--<div><a href="#"><span>boy</span></a></div>-->
        <!--<div><a href="#"><span>girl</span></a></div>-->
        <!--<div><a href="#"><span>校园时光</span></a></div>-->
        <!--<div><a href="#"><span>职场吐槽</span></a></div>-->
        <!--<div><a href="#"><span>家庭琐事</span></a></div>-->
      </div>
      <div class="btn-group btn_set">
        <button class="btn btn-default">设置</button> <button data-toggle="dropdown" class="btn btn-default dropdown-toggle"><span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li id="li_edit_nick">
            <a>修改信息</a>
          </li>
          <li id="li_edit_new">
            <a>新建房间</a>
          </li>
          <li class="divider">
          </li>
          <li>
            <a href="#">其它</a>
          </li>
        </ul>
      </div>
      <div id="send_tool">
        <span id="file_panel">
        信件：<input type="file" id="poster_file">
        </span>
      </div>
      <div class="sendField">
        <input type="button" id="match-button" value="开始匹配" class="btn submit">
        <input id="send-massage" type="text" class="send_message" placeholder="chat with xbao">
        <input type="button" id="send-button" value="发送" class="btn submit">
      </div>
    </div>
    <!--<div id="help">-->
    <!--聊天命令：-->
    <!--<ul>-->
    <!--<li>更改用户名：<code>/nick [username]</code></li>-->
    <!--<li>加入/创建新房间<code>/join [room name]</code></li>-->
    <!--</ul>-->
    <!--</div>-->
  </div>
  <span style="
  display: none" id="user_all"><%= JSON.stringify(user_all) %></span>
  <span style="display: none" id="user_role"><%= user_role %></span>
  <% if (user_role=='tourist'){ %>
  <div id="card_in">
    <ul class="thumb" id="begin_choose">
      <li card="boy"><img src="images/card002.png" width="440" height="318"></li>
      <li card="girl"><img src="images/card_001.png" width="440" height="318"></li>
      <li card="校园时光"><img src="images/card003.png" width="440" height="318"></li>
      <li card="职场吐槽"><img src="images/card004.png" width="440" height="318"></li>
      <li card="家庭琐事"><img src="images/card005.png" width="440" height="318"></li>
    </ul>
  </div>
  <% } %>
  <div id="footer">
    <h2>联系 小宝</h2>
    <div>
      <ul>
        <li>
          <a href="#"><img src="images/fb.png"></a>
          <a href="#"><img src="images/g+.png"></a>
          <a href="#"><img src="images/rss.png"></a>
          <a href="#"><img src="images/tw.png"></a>
        </li>
      </ul>
    </div>
  </div>
  <div class="modal fade" id="modal_nickname" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
              <span aria-hidden="true">&times;</span>
              <span class="sr-only"></span>
            </button>
            <h4 class="modal-title" id="myModal">请设置个人信息</h4>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col-sm-8">
                <div class="alert alert-danger" role="alert" id="nickname-error" style="display:none" >
                  <span class="glyphicon glyphicon-remove"></span>此昵称已存在~
                </div>
                <div class="input-group">
                  <span class="input-group-addon">昵称</span>
                  <input type="text" id="nickname-edit" class="form-control" placeholder="请输入昵称">
                </div>
                <div class="input-group">
                  <span class="input-group-addon">性别</span>&nbsp;&nbsp;
                  <input type="radio" name="sex" value="boy" checked="checked">&nbsp;&nbsp;boy&nbsp;&nbsp;
                  <input type="radio" name="sex" value="girl">&nbsp;&nbsp;girl
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="btn_save_info">确认修改</button>
          </div>
        </div>
      </div>
    </div>
  <div class="modal fade" id="modal_newroom" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only"></span>
          </button>
          <h4 class="modal-title" id="myModal">请设置新房间信息</h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-sm-8">
              <div class="alert alert-danger" role="alert" id="nickname-error" style="
              display:none" >
                <span class="glyphicon glyphicon-remove"></span>此房间已存在~
              </div>
              <div class="input-group">
                <span class="input-group-addon">房间名</span>
                <input type="text" id="newroom-edit" class="form-control" placeholder="请输入新房间名">
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="btn_save_new">确认新建</button>
        </div>
      </div>
    </div>
  </div>
  <!--</div>-->
  <script src="/socket.io/socket.io.js" type="text/javascript"></script>
  <!--<script src="javascripts/jquery/jquery.min.js" type="text/javascript"></script>-->
  <!--<script src="javascripts/bootstrap/bootstrap.min.js" type="text/javascript"></script>-->
  <script src="javascripts/chat.js" type="text/javascript"></script>
  <script src="javascripts/chat_ui.js" type="text/javascript"></script>
  </body>
</html>
